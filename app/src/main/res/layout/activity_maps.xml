<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment" android:layout_width="match_parent" android:layout_height="fill_parent"
        android:layout_weight="1"
        tools:context=".MapsActivity"
        />

    <Button
        android:id="@+id/resetRouteButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:padding="10dp"
        android:text="reset"
        android:textSize="20sp"
        />

</LinearLayout>